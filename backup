#!/bin/bash
# Backup Anki deck to timestamped file using AnkiConnect API
# Supports optional API key authentication via ANKICONNECT_API_KEY env var

# Define the prefix, extension, and current date/time components
prefix="/config/app/backups/"
extension="apkg"
current_date="$(date +'%Y_%m_%d_%H_%M_%S')"

# Combine the components to create the file name
file_name="${prefix}_${current_date}.${extension}"

API_KEY="${ANKICONNECT_API_KEY:-}"

if [ -n "$API_KEY" ]; then
  curl localhost:8765 -X POST -d "{
    \"action\": \"exportPackage\",
    \"version\": 6,
    \"key\": \"$API_KEY\",
    \"params\": {
        \"deck\": \"Default\",
        \"path\": \"$file_name\",
        \"includeSched\": true
    }
}"
else
  curl localhost:8765 -X POST -d '{
    "action": "exportPackage",
    "version": 6,
    "params": {
        "deck": "Default",
        "path": "'$file_name'",
        "includeSched": true
    }
}'
fi
